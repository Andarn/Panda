module example.test;

import panda.lang;

class Foo extends Test {

    method anotherEcho(String message) {
        System.print(message);
    }

}

class Test {

    hidden Test testField;

    constructor(String message) {
        System.print(message);
        testField = this;
    }

    method echo(String message) {
        System.print(testField);
    }

}

main {
    String init;

    Test test = new Test("Constructor");
    test.echo("Method");

    Foo varFoo = null;
    varFoo = new Foo();

    String s = null;
    s = "Hello Panda x2";

    Int i = 2;
    Boolean flag = true;

    System.print("Hello Panda", flag, varFoo, s, test, i);

    if (false) {
        System.print("Nope");
    }
    else {
        System.print("Yay");
    }

    loop (i) {
        System.print("Loop x1");

        loop (i) {
            System.print("Loop x2");
            break;
        }

        continue;
        System.print("Loop x3");
    }

    while (flag) {
        System.print("While x1");
        break;
    }
}